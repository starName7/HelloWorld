.slide{
  height: 380rpx;
}
.slide image{
  width: 100%;
  height: 100%;

}
.grid image{
  width: 70rpx;
  height: 70rpx;
}
.grid{
  display: flex;
  background: #ccc;
  flex-wrap: wrap;
}
.item{
  width: 250rpx;
  height: 250rpx;
  box-sizing: border-box;
  /* 线不算宽度 */
  border: 1rpx solid #eee;
  display: flex;
  justify-content: center;
  /* 水平居中 */
  align-items: center;
  /* 垂直居中 */
}